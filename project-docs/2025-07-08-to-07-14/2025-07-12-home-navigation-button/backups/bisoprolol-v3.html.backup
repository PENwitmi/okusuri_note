    <script>
        // Bottom sheet toggle functionality
        function toggleBottomSheet() {
            const overlay = document.querySelector('.bottom-sheet-overlay');
            const sheet = document.querySelector('.bottom-sheet');
            
            overlay.classList.toggle('active');
            sheet.classList.toggle('active');
        }
        
        // Level button functionality for bottom sheet
        document.querySelectorAll('.bottom-sheet-btn[data-level]').forEach(btn => {
            btn.addEventListener('click', function() {
                const level = this.dataset.level;
                
                // Remove active class from all level buttons
                document.querySelectorAll('.bottom-sheet-btn[data-level]').forEach(b => {
                    b.classList.remove('active');
                });
                document.querySelectorAll('.level-btn').forEach(b => {
                    b.classList.remove('active');
                });
                
                // Add active class to clicked button and corresponding sidebar button
                this.classList.add('active');
                document.querySelector(`.level-btn[data-level="${level}"]`).classList.add('active');
                
                // Trigger level change (assuming level-selector.js handles this)
                if (window.showLevel) {
                    window.showLevel(level);
                }
                
                // Close bottom sheet
                toggleBottomSheet();
            });
        });
    </script>
